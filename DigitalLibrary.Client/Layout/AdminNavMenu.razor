@using DigitalLibrary.Client.Services
@inject NavigationManager Navigation
@inject UserServices UserService

<aside class="admin-sidebar">
    <div class="admin-title">
        <img src="/image-app/DUNGHA_LIBRARY_LOGO-removebg.png" alt="Admin Icon" class="icon">
        <span>QUẢN TRỊ THƯ VIỆN SỐ DUNGHA</span>
    </div>
    <ul>
        <li><NavLink href="/admin" Match="NavLinkMatch.All">🏠 Trang chủ Admin</NavLink></li>
        <li><NavLink href="/admin/users">👫 Quản lý người dùng</NavLink></li>

        <li class="dropdown">
            <span @onclick="ToggleDropdown" class="dropdown-toggle">📚 Quản lý tài liệu</span>
            @if (isDropdownOpen)
            {
                <ul class="dropdown-menu show">
                    <li><NavLink href="/admin/books">📖 Danh sách tài liệu</NavLink></li>
                    <li><NavLink href="/admin/subjects">📑 Danh mục chủ đề</NavLink></li>
                    <li><NavLink href="/admin/categories">📂 Danh mục thể loại</NavLink></li>
                    <li><NavLink href="/admin/authors">✍️ Quản lý tác giả</NavLink></li>
                </ul>
            }
        </li>

        <li><NavLink href="/admin/users">⭐ Đánh giá</NavLink></li>
        <li><NavLink href="/admin/users">📊 Thống kê</NavLink></li>
        <li @onclick="Logout"><NavLink href="#">🚪 Đăng xuất</NavLink></li>
    </ul>
    <div class="sidebar-footer">
        <p>© 2025 By HaTienDung</p>
        <p>📱 +84383366423</p>
        <p>📧 dunghasonlla@outlook.com</p>
    </div>
</aside>


@code {
    private async Task Logout()
    {
        await UserService.LogoutAsync(); // Gọi hàm logout trong UserServices
        Navigation.NavigateTo("/", forceLoad: true);
    }

    private bool isDropdownOpen = false;

    private void ToggleDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
    }

}

<style>
    .admin-sidebar {
        width: 250px;
        height: 100vh;
        background: #2c3e50;
        color: white;
        position: fixed;
        left: 0;
        top: 0;
        display: flex;
        flex-direction: column;
        padding: 15px;
        box-shadow: 4px 0px 10px rgba(0, 0, 0, 0.2);
    }

    .admin-title {
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        padding: 15px 10px;
        border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .admin-title .icon {
            width: 130px;
            height: auto;
        }

    .admin-sidebar ul {
        list-style: none;
        padding: 0;
        margin-top: 15px;
    }

        .admin-sidebar ul li {
            padding: 12px;
            cursor: pointer;
            transition: 0.3s;
        }

            .admin-sidebar ul li:hover {
                background: rgba(255, 255, 255, 0.2);
                border-radius: 5px;
            }

            .admin-sidebar ul li a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
            }

                .admin-sidebar ul li a:hover {
                    text-decoration: underline;
                }

    /* 📚 Dropdown Menu */
    .dropdown {
        position: relative;
        cursor: pointer;
        padding: 10px;
    }

    .dropdown-toggle {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .dropdown-menu {
        list-style: none;
        padding: 5px 0;
        margin: 0;
        background-color: #2d3e50;
        border-radius: 5px;
        display: none;
        position: absolute;
        left: 0;
        width: 220px;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
    }

        .dropdown-menu.show {
            display: block; /* Hiện menu khi có class "show" */
            width: 220px;
        }

        .dropdown-menu li {
            padding: 10px;
            width: 220px;
        }

            .dropdown-menu li:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

    /* 🏁 Footer */
    .sidebar-footer {
        margin-top: auto;
        text-align: center;
        font-size: 12px;
        color: #bdc3c7;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        padding-top: 10px;
    }

        .sidebar-footer p {
            margin: 5px 0;
        }
</style>